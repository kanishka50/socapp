@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IAuthService AuthService
@using CozyComfort.BlazorApp.Services.Interfaces

<div class="page">
    <!-- Enhanced Sidebar -->
    <div class="sidebar">
        <NavMenu />
    </div>

    <!-- Main Content Area -->
    <main>
        <!-- Clean Top Header -->
        <div class="top-row">
            <AuthorizeView>
                <Authorized>
                    <div class="user-info">
                        <i class="bi bi-person-circle" style="font-size: 1.2rem; color: var(--cozy-gray-600);"></i>
                        <span>Welcome, @context.User.Identity?.Name</span>
                        <button class="btn btn-link" @onclick="Logout">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="user-info">
                        <a href="/login" class="btn-cozy-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <!-- Content Area -->
        <article class="content">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/");
    }
}