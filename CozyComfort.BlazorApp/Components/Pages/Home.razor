    private string GetUserRole(System.Security.Claims.ClaimsPrincipal user)
    {
        if (user.IsInRole("Manufacturer")) return "Manufacturer";
        if (user.IsInRole("Distributor")) return "Distributor";
        if (user.IsInRole("Seller")) return "Seller";
        if (user.IsInRole("Administrator")) return "Administrator";
        return "User";
    }

    private string GetDashboardUrl(string role)
    {
        return role.ToLower() switch
        {
            "manufacturer" => "/manufacturer/dashboard",
            "distributor" => "/distributor/dashboard",
            "seller" => "/seller/dashboard",
            "administrator" => "/admin/dashboard",
            _ => "/dashboard"
        };
    }
