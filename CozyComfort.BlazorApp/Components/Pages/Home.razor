@page "/"

<PageTitle>CozyComfort - Premium Blanket Manufacturing & Distribution</PageTitle>

<div class="home-hero">
    <!-- Hero Section -->
    <div class="hero-container">
        <div class="container-fluid">
            <div class="row align-items-center min-vh-100 py-5">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <h1 class="hero-title">
                            Welcome to <span class="brand-highlight">CozyComfort</span>
                        </h1>
                        <p class="hero-subtitle">
                            Premium blanket manufacturing and distribution platform connecting manufacturers,
                            distributors, and sellers in a seamless supply chain ecosystem.
                        </p>
                        <div class="hero-actions">
                            <AuthorizeView>
                                <Authorized>
                                    @{
                                        var userRole = GetUserRole(context.User);
                                    }
                                    <a href="@GetDashboardUrl(userRole)" class="btn btn-cozy-primary btn-lg">
                                        <i class="bi bi-speedometer2 me-2"></i>
                                        Go to @userRole Dashboard
                                    </a>
                                </Authorized>
                                <NotAuthorized>
                                    <a href="/login" class="btn btn-cozy-primary btn-lg">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>
                                        Sign In to Continue
                                    </a>
                                    <a href="/shop" class="btn btn-cozy-secondary btn-lg ms-3">
                                        <i class="bi bi-shop me-2"></i>
                                        Browse Products
                                    </a>
                                </NotAuthorized>
                            </AuthorizeView>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-visual">
                        <div class="feature-cards-stack">
                            <div class="feature-card card-manufacturer">
                                <i class="bi bi-gear-fill"></i>
                                <h4>Manufacturing</h4>
                                <p>Premium blanket production</p>
                            </div>
                            <div class="feature-card card-distributor">
                                <i class="bi bi-truck"></i>
                                <h4>Distribution</h4>
                                <p>Efficient supply chain</p>
                            </div>
                            <div class="feature-card card-seller">
                                <i class="bi bi-shop"></i>
                                <h4>Retail</h4>
                                <p>Quality products for customers</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section bg-light py-5">
    <div class="container-fluid">
        <div class="text-center mb-5">
            <h2 class="section-title">Complete Supply Chain Management</h2>
            <p class="section-subtitle text-muted">
                Streamlined operations from manufacturing to retail
            </p>
        </div>

        <div class="row g-4">
            <!-- Manufacturer Features -->
            <div class="col-lg-4">
                <div class="feature-highlight-card h-100">
                    <div class="feature-icon manufacturer-accent">
                        <i class="bi bi-gear-wide-connected"></i>
                    </div>
                    <h3 class="feature-title">For Manufacturers</h3>
                    <ul class="feature-list">
                        <li><i class="bi bi-check-circle text-success"></i> Production Planning & Capacity Management</li>
                        <li><i class="bi bi-check-circle text-success"></i> Inventory Tracking & Stock Control</li>
                        <li><i class="bi bi-check-circle text-success"></i> Order Management & Fulfillment</li>
                        <li><i class="bi bi-check-circle text-success"></i> Real-time Production Analytics</li>
                    </ul>
                    <AuthorizeView Roles="Manufacturer,Administrator">
                        <div class="mt-auto">
                            <a href="/manufacturer/dashboard" class="btn btn-outline-primary w-100">
                                <i class="bi bi-speedometer2 me-2"></i>Manufacturer Dashboard
                            </a>
                        </div>
                    </AuthorizeView>
                </div>
            </div>

            <!-- Distributor Features -->
            <div class="col-lg-4">
                <div class="feature-highlight-card h-100">
                    <div class="feature-icon distributor-accent">
                        <i class="bi bi-diagram-3"></i>
                    </div>
                    <h3 class="feature-title">For Distributors</h3>
                    <ul class="feature-list">
                        <li><i class="bi bi-check-circle text-success"></i> Multi-Supplier Inventory Management</li>
                        <li><i class="bi bi-check-circle text-success"></i> Automated Reorder Processing</li>
                        <li><i class="bi bi-check-circle text-success"></i> Seller Network Management</li>
                        <li><i class="bi bi-check-circle text-success"></i> Distribution Analytics & Insights</li>
                    </ul>
                    <AuthorizeView Roles="Distributor,Administrator">
                        <div class="mt-auto">
                            <a href="/distributor/dashboard" class="btn btn-outline-info w-100">
                                <i class="bi bi-speedometer2 me-2"></i>Distributor Dashboard
                            </a>
                        </div>
                    </AuthorizeView>
                </div>
            </div>

            <!-- Seller Features -->
            <div class="col-lg-4">
                <div class="feature-highlight-card h-100">
                    <div class="feature-icon seller-accent">
                        <i class="bi bi-shop-window"></i>
                    </div>
                    <h3 class="feature-title">For Sellers</h3>
                    <ul class="feature-list">
                        <li><i class="bi bi-check-circle text-success"></i> Customer Order Management</li>
                        <li><i class="bi bi-check-circle text-success"></i> Real-time Stock Availability</li>
                        <li><i class="bi bi-check-circle text-success"></i> Automated Distributor Orders</li>
                        <li><i class="bi bi-check-circle text-success"></i> Sales Performance Tracking</li>
                    </ul>
                    <AuthorizeView Roles="Seller,Administrator">
                        <div class="mt-auto">
                            <a href="/seller/dashboard" class="btn btn-outline-success w-100">
                                <i class="bi bi-speedometer2 me-2"></i>Seller Dashboard
                            </a>
                        </div>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="stats-section py-5">
    <div class="container-fluid">
        <div class="text-center mb-5">
            <h2 class="section-title">Platform Overview</h2>
            <p class="section-subtitle text-muted">Real-time system metrics</p>
        </div>

        <div class="row g-4">
            <div class="col-md-3">
                <div class="stat-card text-center">
                    <div class="stat-icon text-primary">
                        <i class="bi bi-box-seam display-4"></i>
                    </div>
                    <h3 class="stat-number">@totalProducts</h3>
                    <p class="stat-label">Active Products</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center">
                    <div class="stat-icon text-info">
                        <i class="bi bi-clipboard-data display-4"></i>
                    </div>
                    <h3 class="stat-number">@totalOrders</h3>
                    <p class="stat-label">Orders Processed</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center">
                    <div class="stat-icon text-success">
                        <i class="bi bi-people-fill display-4"></i>
                    </div>
                    <h3 class="stat-number">@activeUsers</h3>
                    <p class="stat-label">Active Users</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card text-center">
                    <div class="stat-icon text-warning">
                        <i class="bi bi-graph-up display-4"></i>
                    </div>
                    <h3 class="stat-number">99.8%</h3>
                    <p class="stat-label">System Uptime</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="cta-section bg-primary text-white py-5">
    <div class="container-fluid text-center">
        <h2 class="mb-3">Ready to Optimize Your Supply Chain?</h2>
        <p class="lead mb-4">
            Join our platform and experience seamless blanket manufacturing and distribution management.
        </p>
        <AuthorizeView>
            <NotAuthorized>
                <div class="cta-actions">
                    <a href="/login" class="btn btn-light btn-lg me-3">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Get Started
                    </a>
                    <a href="#features" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </NotAuthorized>
            <Authorized>
                <p class="lead">Welcome back! Access your dashboard to continue managing your operations.</p>
            </Authorized>
        </AuthorizeView>
    </div>
</div>

